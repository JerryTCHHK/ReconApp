@{
    ViewBag.Title = "Sign Up For Recon Web App";

    ViewBag.WelcomeMessage = "Start to use Reconciliation Web App today";

    ViewBag.AgreementContent = "I agree to the <a href=\"#\">Terms of Service </a> and <a href=\"\">Privacy Policy</a>.";

    ViewBag.AlreadyHaveAnAccount = String.Format("Already have an account?<a href=\"{0}\">Login here</a>", @Url.Action("LoginPage", "Login"));

    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

@model ReconciliationWebApp.Models.RegisterModel    
    <body class="black-background" id="signUpBody">

       <div class="container justify-content-center vertical-center">

           <form class="shadow-sm pt-3 pl-3 pr-3 pb-1 mb-0 bg-white rounded" id="signUp-Form" action="@Url.Action("Register","SignUp")" method="post" autocomplete="off">

               <div class="form-group mb-1">

                   <h3 class="text-center notSelected">Sign Up Form</h3>

               </div>
               <div class="form-group text-center" id="welcomeDiv">

                   <label class="text-center small mb-0" for="welcomeMessage">@ViewBag.WelcomeMessage</label>

               </div>

               <div class="form-group">

                   <label class="notSelected" for="newUsername">Username:</label>

                   @Html.TextBoxFor(m => m.newUserName, new { @class = "form-control", placeholder="Username"})                    

               </div>

               <div class="form-group">

                   <label class="notSelected" for="newEmail">Email:</label>

                   @Html.TextBoxFor(m => m.newEmail, new { @class = "form-control", placeholder = "name@example.com", type = "email" })
                   

               </div>

               <div class="form-group">

                   <label class="notSelected" for="newPassword">Password:</label>

                   @Html.TextBoxFor(m => m.newPassword, new { @class = "form-control", placeholder = "Password", type = "password" })

               </div>

               <div class="form-group">

                   <label class="notSelected" for="confirmPassword">Confirm Password:</label>

                   @Html.TextBoxFor(m=> m.confirmPassword, new { @class= "form-control", placeholder = "Confirm Password", type="password"})
                   
   
               </div>

               <div class="form-group form-check">

                   <label class="form-check-label small notSelected">

                        @Html.CheckBoxFor( m => m.agreeCheckbox, new { @class="form-check-input", type="checkbox"})
                        @Html.Raw(ViewBag.AgreementContent)

                   </label>


               </div>


               <div class="form-group">

                   <Button type="submit" class="btn btn-primary btn-block">Submit</Button>
                   
               </div>

               <div class="form-group text-center">
                  <label for="alreadyHaveAnAccount" class="text-center small">@Html.Raw(ViewBag.AlreadyHaveAnAccount)</label>
               </div>
           </form>

           <div class="text-center small text-light">
                <label class="notSelected" id="CopyRight"></label>
           </div>

           

       </div>
        
    </body>
